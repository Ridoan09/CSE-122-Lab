
#include<stdio.h>



int main()
{
    int w;
    scanf("%d",&w);

    if(w==2) {
        printf("NO");
    } else if(w%2==0) {
        printf("YES");
    } else {
        printf("NO");
    }
    return 0;
}

Problem 2: Way too long word
#include<stdio.h>

int main()
{
    int i,n;
    char word[100];

    scanf("%d",&n);

    for(i=1;i<=n;i++){
        scanf("%s",&word);
        if(strlen(word)>10){
            printf("%c%d%c\n",word[0],strlen(word)-2,word[strlen(word)-1]);
        }else{
            printf("%s\n",word);
        }
    }
    return 0;
}

Problem 3: Team
#include <iostream>
using namespace std;

int main() {
    int n,i,a,b,c,sum=0;
    cin>>n;
    
    for (i=0;i<n;i++){
        cin>>a;
        cin>>b;
        cin>>c;
        if(a+b+c>=2){
            sum++;
        }
    }
  cout<<endl<<sum<<endl;
    return 0;
}
